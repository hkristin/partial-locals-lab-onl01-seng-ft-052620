<%= form_tag students_path, method: :get do %>
  <p>
    <%= if text_field_tag.empty? %>
      <%= return @students.all %>
    <%= else text_field_tag :query, params[:query] %>
    <%= submit_tag "Search"%>
  </p>
<% end %>
<% end %>

<% @students.each do |student| %>
  <%= render partial: 'student', locals: {student: student} %>
<% end %>
